<div class="w-full p-4 bg-white border border-gray-300 shadow rounded-lg">
    <div class="w-full flex items-start">
        <a href="{{ path('profile_view', {id: comment.author.id}) }}">
            <div class="flex items-center space-x-2 mb-4">
                <img src="{{ comment.author.profilePicture }}" alt="Profile picture of {{ comment.author.username }}" class="h-8 w-8 object-cover rounded-full">
                <span class="font-bold">{{ comment.author.username }}</span>
            </div>
        </a>
    </div>
    <p class="text-gray-700">
        {{ comment.content }}
    </p>
    <p class="text-sm text-gray-600 text-right mt-2">Published the {{ comment.createdAt|date('d/m/Y') }}</p>
</div>